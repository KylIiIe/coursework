<h1>New Deal</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with(model: @deal, url: deals_path) do |form| %>
  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_local_field :date %>
  </div>

  <div class="field">
    <%= form.label :book_ids, 'Book 1' %>
    <%= form.collection_select :book_ids[0], @books, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :book_ids, 'Book 2' %>
    <%= form.collection_select :book_ids[1], @books, :id, :title %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
