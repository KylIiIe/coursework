<h1>Edit genre</h1>
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
<%= form_with(model: @genre, url: genre_path) do |form| %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <%= form.hidden_field :id, value: @genre.id %>
  <p>
    <%= form.submit %>
  </p>
<% end %>
