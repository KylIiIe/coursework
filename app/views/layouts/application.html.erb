<!DOCTYPE html>
<html>
  <head>
    <title>Book-crossing</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

  </head>
  <script>
      setTimeout(function() {
          $('.alert').fadeOut('slow');
      }, 3000);
  </script>
  <body>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  <script>
      document.addEventListener('DOMContentLoaded', function() {
          var alerts = document.querySelectorAll('.alert');
          alerts.forEach(function(alert) {
              setTimeout(function() {
                  alert.style.display = 'none';
              }, 3000);
          });
      });
  </script>

  <nav class="navbar sticky-top navbar-light bg-dark bg-opacity-60">
    <div class="container-fluid justify-content-left">
      <div class="d-flex">
        <div class="p-2">
          <%= link_to 'Оголошення', books_path, class: "btn btn-light" %>
        </div>
        <% if user_signed_in? %>
        <div class="p-2">
          <%= link_to 'Автори', authors_path, class: "btn btn-light" %>
        </div>
        <div class="p-2">
          <%= link_to 'Користувачі', users_path, class: "btn btn-light" %>
        </div>
        <div class="p-2">
          <%= link_to 'Жанри', genres_path, class: "btn btn-light" %>
        </div>
        <div class="p-2">
          <%= link_to 'Додати нове оголошення', new_book_path, class: "btn btn-light" %>
        </div>
        <% end %>
        <div class="p-2">
          <% if user_signed_in? %>
            <%= button_to "Вийти", destroy_user_session_path, method: :delete, class: "btn btn-light" %>
          <% else %>
            <%= link_to "Увійти", new_user_session_path, class: "btn btn-light" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
