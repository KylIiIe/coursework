
<h2> Search </h2>
<%= form_with url: "/search_book", method: "get" do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :count_pages %>
    <%= form.number_field :count_pages %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, [["Шукаю", "true"], ["Віддаю", "false"]], { include_blank: true } %>
  </div>

  <div class="field">
    <%= form.label :genre_id, 'Genres' %>
    <%= form.collection_select :genre_id, @genres, :id, :title, { include_blank: true } %>
  </div>

  <div class="field">
    <%= form.label :author_id, 'Authors' %>
    <%= form.collection_select :author_id, @authors, :id, :name, { include_blank: true } %>
  </div>

  <%= form.button "Search" %>
<% end %>


<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Count pages</th>
    <th>Status</th>
    <th>Genre</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @result.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.descr %></td>
      <td><%= book.authors.map {|a| a.name}.join(', ') %></td>
      <td><%= book.count_pages %></td>
      <td><%= book.status ? 'Віддаю' : 'Розшукую' %></td>
      <td><%= book.genre.title %></td>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

