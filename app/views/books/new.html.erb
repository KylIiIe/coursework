<%= stylesheet_link_tag "dropdown" %>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(function(){
        $("#book_author_ids").select2();
    });
</script>

<h1>New Book</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with(model: @book, url: books_path) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :descr %>
    <%= form.text_area :descr %>
  </div>

  <div class="field">
    <%= form.label :count_pages %>
    <%= form.number_field :count_pages %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, [["Шукаю", "true"], ["Віддаю", "false"]] %>
  </div>

  <div class="field">
    <%= form.label :genre_id, 'Genres' %>
    <%= form.collection_select :genre_id, @genres, :id, :title %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="authors">
    <%= form.label :authors, 'Authors' %>
    <br/>
    <div class="selected">
      <select name="book[author_ids]" id="book_author_ids" multiple>
        <% @authors.each do |author| %>
          <option value=<%= author.id %>><%= author.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', books_path %>