<h1>New Book</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with(model: @book, url: books_path) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :descr %>
    <%= form.text_area :descr %>
  </div>

  <div class="field">
    <%= form.label :count_pages %>
    <%= form.number_field :count_pages %>
  </div>

  <div class="field">
    <%= form.label :authors, 'Authors' %>
    <%= form.text_field :authors %>
    <%= form.text_field :authors %>
    <%= form.text_field :authors %>

  </div>

  <div class="field">
    <%= form.label :genre_ids, 'Genres' %>
    <%= form.collection_check_boxes :genre_ids, @genres, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', books_path %>