<h1>New Book</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with(model: @book, url: books_path) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :descr %>
    <%= form.text_area :descr %>
  </div>

  <div class="field">
    <%= form.label :count_pages %>
    <%= form.number_field :count_pages %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, [["Шукаю", "true"], ["Віддаю", "false"]] %>
  </div>

  <div class="field">
    <%= form.label :genre_id, 'Genres' %>
    <%= form.collection_select :genre_id, @genres, :id, :title %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="field">
    <%= form.label :author_ids, 'Authors' %>
    <%= form.collection_check_boxes :author_ids, @authors, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', books_path %>