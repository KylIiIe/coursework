<h1><%= @book.title %></h1>

<p><strong>Description:</strong> <%= @book.descr %></p>

<p><strong>Count pages:</strong> <%= @book.count_pages %></p>

<p><strong>Status:</strong>
  <%= if(@book.status == true)%>
  Віддаю
  <%= else %>
  Розшукую
  <% end %>
</p>

<h2>Authors</h2>
<ul>
  <% @authors.each do |author| %>
    <li><%= author.name %></li>
  <% end %>
</ul>

<h2>Genres</h2>
<ul>
  <% @genres.each do |genre| %>
    <li><%= genre.name %></li>
  <% end %>
</ul>

<%= link_to 'List books', books_path %>
<%= link_to 'Edit', edit_book_path(@book) %>
<%= button_to "Destroy this book", @book, method: :delete %>

