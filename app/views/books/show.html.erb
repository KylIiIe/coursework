<h1><%= @book.title %></h1>

<p><strong>Description:</strong> <%= @book.descr %></p>

<p><strong>Count pages:</strong> <%= @book.count_pages %></p>

<p><strong>Status:</strong>
  <% if @book.status %>
  Віддаю
  <% else %>
  Розшукую
  <% end %>
</p>

<p><strong>Authors:</strong></p>
<ul>
  <% @authors.each do |author| %>
    <li><%= author.name %></li>
  <% end %>
</ul>

<p><strong>Genre:</strong> <%= @book.genre.title %></p>

<%= link_to 'List books', books_path %>
<%= link_to 'Edit', edit_book_path(@book) %>
<%= button_to "Destroy this book", @book, method: :delete %>
