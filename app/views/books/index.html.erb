<h1>Listing books</h1>
</p><%= link_to 'Back', home_path %></p>
</p><%= link_to 'Search', search_book_path %></p>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Count pages</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.descr %></td>
      <td><%= book.count_pages %></td>
      <td><%= book.status ? 'Віддаю' : 'Розшукую' %></td>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
